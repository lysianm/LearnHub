<% include header.ejs %>
    <div class="table-wrapper">
        <% if (grades.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Grade</th>
                        <th scope="col">Modification</th>
                    </tr>
                </thead>
                <tbody>
                    <% grades.forEach((grade, index) => { %>
                        <tr>
                            <td><%= grade.name %></td>
                            <td><%= grade.grade %></td>
                            <td>
                            <a href="/grade/edit/<%= grade.gradeID %>" class="btn btn-sm btn-success">Edit   </a>
        <form action="/grade/delete/<%= grade.gradeID %>?_method=DELETE" method="post">
              <button type="submit" name="delete" class="btn btn-sm btn-danger">Delete</button>
        </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No users found. Go <a href="/add" >here</a> to add users.</p>
        <% } %>
    </div>
</div>
</body>
</html>
